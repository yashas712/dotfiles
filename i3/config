#     position top
#     workspace_buttons yes
# }

exec_always --no-startup-id picom --backend glx
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id nm-applet
exec_always --no-startup-id feh --bg-fill ~/Pictures/back.jpg

exec_always --no-startup-id volumeicon
exec_always --no-startup-id blueman-applet
for_window [class="Zenity"] floating enable, border pixel 2, sticky enable, move position mouse, resize set 500 500
